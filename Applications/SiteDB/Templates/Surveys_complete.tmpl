#include $context.SiteDBCfg.templatesPath + "/base.tmpl"
#set $basepath = $context.CmdLineArgs.opts.baseUrl
		<!--Top area-->
		#if $showlist
		<div class="toparea">
			<h1>SiteDB :: Select survey</h1>
			<p> Below is a list of all open surveys, and the roles that are 
			expected to answer them. To respond to a survey click on it's name. Your response will be held for all sites you are responsible for.</p>
			#if $warning != "None"
			<p style="color:red; font-weight:bold">$warning</p>
			#end if			
		</div>
		<div class="left leftborder">
			#set list = $survey.getFullSurveyList
			<table>
				<tr>
					<td><p><b>Survey name</b></p></td>
					<td><p><b>Who should answer</b></p></td>
				</tr>
			#for l in $list
				<tr>
			#if $context.SecurityDBApi.hasRole($token.dn, $list[$l].wholist[0][0])
				#set sitelist = $context.SecurityDBApi.sitesForRole($token.dn, $list[$l].wholist[0][0])
				#set auth = "False"
				#for s in $sitelist
					#if $list[$l].wholist[0][1] == $tierlist[$sitelist[$s]['sites']]
					#set $auth = "True"
					#end if
				#end for
				#if $list[$l].wholist[0][1] == "All Tiers"
          #set $auth = "True"
				#end if				
					<td>
					#if $auth == "True"
						<p><a href="completesurvey?surveyid=$l">$list[$l].name</a></p>
					#else
						<p>$list[$l].name</p>
					#end if
					</td>
			#else
					<td>
						<p>$list[$l].name</p>
					</td>
			#end if
					<td>
						<p>$list[$l].wholist[0][0] representing $list[$l].wholist[0][1]</p>
					</td>
				</tr>
			#end for
			</table>
		</div>
		#else
			#set name = $survey.getSurvey($surveyid)[0]['name']
			#set close = $survey.getSurvey($surveyid)[0]['closed']
			#if $close > $timestamp
		<div class="toparea">
			<h1>SiteDB :: Respond to survey "$name"</h1>
			<p>You have been asked to respond to this survey. Please 
			answer in as much detail as appropriate</p>			
			#set size = len($survey.getQuestionList($surveyid))
			<p>Survey "$name" has $size question(s)</p>
				#if $warning != "None"
			<p style="color:red; font-weight:bold">$warning</p>
				#end if
		</div>
		<form action="$basepath/surveys/completesurvey" method="get">
			<input type="hidden" name="surveyid" value="$surveyid"/>
			<input type="hidden" name="action" value="answer"/>			
			#set questions = $survey.getAllQuestions($surveyid)
			<div class="left leftborder" style="width: 300px">
			#for q in questions
				<p><b>$questions[$q]['question']</b><br/>
				#if $questions[$q]['type'] == "Yes/No"
				<div class="left"><p>
				Yes <input type="radio" name="$questions[$q]['id']" value="yes" checked="checked"/>
				No <input type="radio" name="$questions[$q]['id']" value="no"/>
				</p></div>
				#else
				<textarea name="$questions[$q]['id']" rows="5" cols="30">Type your response here</textarea>
				#end if
				</p>
			#end for
			</div>
			<div class="left leftborder" style="width: 300px">			
				<input type="submit"/>
				<input type="reset"/>
			</div>
		</form>
			#else
		<div class="toparea">
			<h1>SiteDB :: "$name" survey closed</h1>
			<p>This survey has closed and is no longer taking further responses. Thanks 
			you for your interest.</p>
		</div>			
			#end if
		#end if		
 	</body>
</html>